{
  "name": "themes",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/themes/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "clean": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["default", "^production"],
      "options": {
        "command": "pnpm rimraf dist/packages/themes"
      }
    },
    "init": {
      "cache": true,
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "commands": [
          {
            "command": "\"apps/cli/bin/dev.cmd\" theme init --clean"
          }
        ]
      }
    },
    "generate": {
      "cache": true,
      "executor": "nx:run-commands",
      "dependsOn": ["init"],
      "options": {
        "commands": [
          {
            "command": "tamagui generate-themes ./src/themes-input.ts ./src/default-theme.ts"
          }
        ],
        "cwd": "packages/themes"
      }
    },
