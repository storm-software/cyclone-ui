{
  "name": "themes",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/themes/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "clean": {
      "cache": false,
      "executor": "nx:run-commands",
      "inputs": ["default", "^production"],
      "options": {
        "command": "pnpm rimraf dist/packages/themes"
      }
    },
    "init": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["{workspaceRoot}/storm.json"],
      "outputs": ["{projectRoot}/src/themes/*"],
      "dependsOn": ["^build"],
      "options": {
        "commands": [
          {
            "command": "\"apps/cli/bin/dev.cmd\" theme init --clean --outputPath \"packages/themes/src/themes\""
          }
        ]
      }
    },
    "generate": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["{projectRoot}/src/themes/*"],
      "outputs": ["{projectRoot}/src/brand-themes.ts"],
      "dependsOn": ["init"],
      "options": {
        "commands": [
          {
            "command": "tamagui generate-themes ./src/themes-input.ts ./src/brand-themes.ts"
          }
        ],
        "cwd": "packages/themes"
      }
    },
    "build": {
      "cache": true,
      "executor": "@storm-software/workspace-tools:tsup-neutral",
      "dependsOn": ["generate"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "entry": "packages/themes/src/index.ts",
        "additionalEntryPoints": ["packages/themes/src/brand-themes.ts"],
        "outputPath": "dist/packages/themes",
        "tsConfig": "packages/themes/tsconfig.json",
        "project": "packages/themes/package.json",
        "defaultConfiguration": "production",
        "external": ["react", "react-native"],
        "assets": [
          {
            "input": "packages/themes",
            "glob": "*.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      },
      "configurations": {
        "production": {
          "debug": false,
          "verbose": false
        },
        "development": {
          "debug": true,
          "verbose": true
        }
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "implicitDependencies": ["cli"]
}
