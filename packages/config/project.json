{
  "name": "config",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/config/src",
  "projectType": "library",
  "targets": {
    "build-base": {
      "cache": true,
      "inputs": ["default", "^production"],
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tamagui-build --clean --bundle",
        "cwd": "packages/config"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["default", "^production"],
      "dependsOn": ["build-base"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec rimraf dist/packages/config",
          "make-dir dist/packages/config",
          "pnpm exec copyfiles -f LICENSE ./packages/config/package.json ./packages/config/*.md  ./dist/packages/config",
          "pnpm exec copyfiles -u 3 ./packages/config/dist/**/*.js ./dist/packages/config/dist",
          "pnpm exec copyfiles -u 3 ./packages/config/types/**/* ./dist/packages/config/types"
        ],
        "parallel": false
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
