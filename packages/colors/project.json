{
  "name": "colors",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/colors/src",
  "implicitDependencies": ["cli"],
  "targets": {
    "build-base": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["{workspaceRoot}/storm.json", "^production"],
      "outputs": ["{projectRoot}/src/schemes/*"],
      "dependsOn": ["^build"],
      "options": {
        "command": "\"apps/cli/bin/run.cmd\" theme init --clean --output packages/colors/src/schemes"
      }
    },
    "build": {
      "cache": true,
      "executor": "@storm-software/workspace-tools:unbuild",
      "inputs": ["typescript", "^production"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["build-base", "^build"],
      "options": {
        "entry": "packages/colors/src/index.ts",
        "outputPath": "dist/packages/colors",
        "tsConfig": "packages/colors/tsconfig.json",
        "project": "packages/colors/package.json",
        "defaultConfiguration": "production"
      },
      "configurations": {
        "production": {
          "debug": false,
          "verbose": false
        },
        "development": {
          "debug": true,
          "verbose": true
        }
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
