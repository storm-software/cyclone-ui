{
  "name": "button",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/button/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build-base": {
      "cache": true,
      "inputs": ["default", "^production"],
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tamagui-build --clean",
        "cwd": "packages/button"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["default", "^production"],
      "dependsOn": ["build-base"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec rimraf dist/packages/button",
          "make-dir dist/packages/button",
          "pnpm exec copyfiles -f LICENSE ./packages/button/package.json ./packages/button/*.md ./dist/packages/button",
          "pnpm exec copyfiles -u 3 ./packages/button/dist/**/*.js ./dist/packages/button/dist"
        ],
        "parallel": false
      }
    }
  }
}
