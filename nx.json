{
  "extends": "@storm-software/workspace-tools/config/nx.json",
  "cli": {
    "packageManager": "pnpm"
  },
  "targetDefaults": {
    "lint": {
      "cache": true,
      "inputs": ["default"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^lint"]
    },
    "clean": {
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec rimraf dist/{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["default", "^production"],
      "dependsOn": ["^build"]
    },
    "docs": {
      "cache": true,
      "inputs": ["defaultDocs", "^production"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["build", "^docs"]
    },
    "test": {
      "cache": true,
      "inputs": ["defaultTesting", "^production"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["build", "^test"]
    },
    "e2e": {
      "cache": true,
      "inputs": ["defaultTesting", "^production"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["test", "^e2e"]
    },
    "nx-release-publish": {
      "cache": false,
      "inputs": ["default", "^production"],
      "dependsOn": ["build", "^nx-release-publish"]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "release": {
    "projects": ["packages/*", "components/*", "apps/*"],
    "projectsRelationship": "independent",
    "releaseTagPattern": "{projectName}-v{version}",
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": false,
      "projectChangelogs": {
        "createRelease": "github",
        "entryWhenNoChanges": false
      }
    },
    "version": {
      "preVersionCommand": "pnpm dlx nx run-many -t build",
      "generator": "@storm-software/workspace-tools:release-version",
      "generatorOptions": {
        "currentVersionResolver": "git-tag",
        "specifierSource": "conventional-commits"
      }
    }
  },
  "parallel": 1,
  "plugins": [
    {
      "plugin": "@nx/webpack/plugin",
      "options": {
        "buildTargetName": "build",
        "serveTargetName": "serve",
        "previewTargetName": "preview"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "previewTargetName": "preview",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "serveStaticTargetName": "serve-static"
      }
    },
    {
      "plugin": "@nx/rollup/plugin",
      "options": {
        "buildTargetName": "build"
      }
    },
    {
      "plugin": "@nx/storybook/plugin",
      "options": {
        "buildStorybookTargetName": "build-storybook",
        "serveStorybookTargetName": "storybook",
        "testStorybookTargetName": "test-storybook",
        "staticStorybookTargetName": "static-storybook"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "exclude": ["packages/**/__fixtures__/**/*"],
      "options": {
        "targetName": "lint",
        "useFlatConfig": true
      }
    },
    "@storm-software/workspace-tools/plugins/typescript",
    "./dist/plugins/components/index.js"
  ],
  "generators": {
    "@nx/react": {
      "library": {
        "style": "none",
        "linter": "eslint",
        "unitTestRunner": "none"
      },
      "application": {
        "babel": true,
        "style": "none",
        "linter": "eslint",
        "bundler": "webpack"
      },
      "component": {
        "style": "none"
      }
    },
    "@nx/next": {
      "application": {
        "style": "none",
        "linter": "eslint"
      }
    },
    "@nx/web:application": {
      "style": "css",
      "linter": "eslint",
      "unitTestRunner": "none",
      "e2eTestRunner": "none"
    }
  }
}
