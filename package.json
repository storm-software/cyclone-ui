{
  "name": "@cyclone-ui/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A repository containing the core front-end components used by Storm Software across many platforms",
  "keywords": [
    "cyclone-ui",
    "storm",
    "storm-stack",
    "storm-ops",
    "acidic",
    "acidic-engine",
    "nextjs",
    "prisma",
    "hasura",
    "strapi",
    "graphql",
    "sullivanpj",
    "monorepo"
  ],
  "homepage": "https://stormsoftware.com",
  "bugs": {
    "url": "https://stormsoftware.com/support",
    "email": "support@stormsoftware.com"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/cyclone-ui.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/storm-software"
  },
  "license": "Apache License 2.0",
  "author": {
    "name": "Storm Software",
    "email": "contact@stormsoftware.com",
    "url": "https://stormsoftware.com"
  },
  "scripts": {
    "adr": "pnpm log4brains adr new",
    "adr-preview": "pnpm log4brains preview",
    "api-extractor": "pnpm storm-docs api-extractor --outputPath=\"docs/api-reference\" --clean",
    "prebuild": "pnpm clean",
    "build": "nx affected -t build --parallel=5",
    "build-all": "nx run-many -t build --all --parallel=5",
    "build-apps": "nx run-many -t build --projects=apps/* --parallel=5",
    "build-docs": "nx run-many -t build --projects=docs/* --parallel=5",
    "build-libs": "nx run-many -t build --projects=libs/* --parallel=5",
    "build-prod": "nx run-many -t build --all --prod --parallel=5",
    "build-storybook": "storybook build -s public",
    "build-tools": "nx run-many -t build --projects=tools/* --parallel=5",
    "clean": "pnpm exec rimraf dist",
    "clean-apps": "pnpm exec rimraf dist/apps",
    "clean-docs": "pnpm exec rimraf dist/docs",
    "clean-libs": "pnpm exec rimraf dist/libs",
    "clean-storybook": "pnpm exec rimraf dist/storybook",
    "clean-tools": "pnpm exec rimraf dist/tools",
    "commit": "pnpm storm-git commit",
    "dep-graph": "nx dep-graph",
    "e2e": "nx e2e",
    "format": "nx format:write",
    "graph": "nx graph",
    "help": "nx help",
    "preinstall": "npx -y only-allow pnpm",
    "install-csb": "corepack enable && pnpm install --frozen-lockfile",
    "lint": "pnpm storm-lint all --skip-cspell",
    "local-registry": "nx local-registry @cyclone-ui/cyclone-ui",
    "nx": "nx",
    "prepare": "pnpm add lefthook -w && pnpm lefthook install",
    "readme-gen": "pnpm storm-git readme-gen --templates=\"docs/readme-templates\"",
    "release": "pnpm storm-git release",
    "start": "nx serve",
    "storybook": "pnpm storybook dev -p 6006",
    "test": "nx test && pnpm test:storybook",
    "test-storybook": "pnpm test-storybook"
  },
  "prettier": "@storm-software/linting-tools/prettier/config.json",
  "dependencies": {
    "@nx/devkit": "18.2.3",
    "@nx/jest": "18.2.3",
    "@nx/js": "18.2.3",
    "@nx/node": "18.3.2",
    "@storm-software/build-tools": "latest",
    "@storm-software/config": "latest",
    "@storm-software/config-tools": "latest",
    "@storm-software/git-tools": "latest",
    "@storm-software/linting-tools": "latest",
    "@storm-software/testing-tools": "latest",
    "@storm-software/tsconfig": "latest",
    "@storm-software/workspace-tools": "latest",
    "@storybook/icons": "^1.2.9",
    "@tamagui/build": "^1.92.1",
    "@types/jest": "^29.5.8",
    "@types/node": "20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "babel-loader": "^9.1.3",
    "bundlewatch": "latest",
    "copyfiles": "^2.4.1",
    "expo": "~50.0.3",
    "expo-av": "^13.10.5",
    "expo-constants": "^15.4.5",
    "expo-document-picker": "^11.10.1",
    "expo-linking": "^6.2.2",
    "expo-modules-core": "^1.11.13",
    "i18next": "^23.11.2",
    "i18next-http-backend": "^2.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "log4brains": "^1.0.1",
    "make-dir-cli": "^3.1.0",
    "next": "14.0.4",
    "prettier": "^3.0.3",
    "prettier-plugin-packagejson": "^2.4.6",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^14.1.0",
    "react-native": "0.73.2",
    "react-native-web": "^0.19.9",
    "react-webpack5": "link:@storybook\react-webpack5",
    "rimraf": "^5.0.5",
    "solito": "^4.2.2",
    "storybook": "7.6.10",
    "tamagui": "^1.94.5",
    "terser": "^5.24.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "~5.2.2",
    "verdaccio": "^5.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@expo/cli": "~0.16.5",
    "@nx/expo": "18.2.3",
    "@nx/next": "18.2.3",
    "@nx/react": "18.2.3",
    "@nx/react-native": "18.2.3",
    "@nx/rollup": "18.2.3",
    "@nx/storybook": "18.2.3",
    "@nx/vite": "18.2.3",
    "@nx/web": "18.2.3",
    "@nx/webpack": "18.2.3",
    "@nx/workspace": "18.2.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@rollup/plugin-url": "^7.0.0",
    "@storybook/addon-essentials": "7.6.10",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/core-server": "7.6.10",
    "@storybook/jest": "^0.2.3",
    "@storybook/react": "7.6.10",
    "@storybook/react-vite": "7.6.10",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.2",
    "@svgr/rollup": "^8.0.1",
    "@svgr/webpack": "^8.0.1",
    "@swc-node/register": "~1.8.0",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@vitest/ui": "^1.3.1",
    "core-js": "^3.36.1",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "jsdom": "~22.1.0",
    "lefthook": "^1.6.9",
    "nx": "18.2.3",
    "react-refresh": "^0.10.0",
    "swc-loader": "0.1.15",
    "vite": "~5.0.0",
    "vitest": "^1.3.1",
    "webpack-cli": "^5.1.4"
  },
  "packageManager": "pnpm@8.10.2",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8.10.2"
  },
  "pnpm": {
    "overrides": {
      "@cyclone-ui/button": "workspace:*",
      "@cyclone-ui/cli": "workspace:*",
      "@cyclone-ui/config": "workspace:*",
      "@cyclone-ui/storybook": "workspace:*",
      "@cyclone-ui/themes": "workspace:*",
      "@cyclone-ui/website": "workspace:*"
    }
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/*/*.js",
        "maxSize": "200kB"
      }
    ],
    "ci": {
      "trackBranches": [
        "main",
        "alpha",
        "beta"
      ]
    }
  },
  "namespace": "@cyclone-ui",
  "nextBundleAnalysis": {
    "buildOutputDirectory": "dist/apps/website/.next"
  },
  "nx": {
    "includedScripts": [
      "lint",
      "format"
    ]
  },
  "triggerEmptyDevReleaseByIncrementingThisNumber": 0
}
